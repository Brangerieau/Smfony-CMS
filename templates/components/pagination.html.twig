{% if pageCount > 1 %}
    <div class="row">
        <div class="col-lg-12">
            <ul class="pagination pagination-rounded justify-content-center mt-4">
                {% if first is defined and current != first %}
                    <li class="page-item">
                        <a href="{{ path(route, query|merge({(pageParameterName): first})) }}" class="page-link"><i class="mdi mdi-chevron-double-left"></i></a>
                    </li>
                {% endif %}

                {% if previous is defined %}
                    <li class="page-item">
                        <a href="{{ path(route, query|merge({(pageParameterName): previous})) }}" class="page-link"><i class="mdi mdi-chevron-left"></i></a>
                    </li>
                {% endif %}

                {% for page in pagesInRange %}
                    {% if page != current %}
                        <li class="page-item">
                            <a href="{{ path(route, query|merge({(pageParameterName): page})) }}" class="page-link">{{ page }}</a>
                        </li>
                    {% else %}
                        <li class="page-item active">
                            <span class="page-link">{{ page }}</span>
                        </li>
                    {% endif %}
                {% endfor %}

                {% if next is defined %}
                    <li class="page-item">
                        <a href="{{ path(route, query|merge({(pageParameterName): next})) }}" class="page-link"><i class="mdi mdi-chevron-right"></i></a>
                    </li>
                {% endif %}

                {% if last is defined and current != last %}
                    <li class="page-item">
                        <a href="{{ path(route, query|merge({(pageParameterName): last})) }}" class="page-link"><i class="mdi mdi-chevron-double-right"></i></a>
                    </li>
                {% endif %}
            </ul>
        </div>
    </div>
{% endif %}