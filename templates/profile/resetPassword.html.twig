{% extends '@SymfonyCms/layouts/base.html.twig' %}

{% block title %}{% trans from 'symfonycms' %}Administration{% endtrans %}{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-12">
            <div class="page-title-box d-sm-flex align-items-center justify-content-between">
                <h4 class="mb-sm-0 font-size-18">{% trans from 'symfonycms' %}Profile{% endtrans %}</h4>

                <div class="page-title-right">
                    <ol class="breadcrumb m-0">
                        <li class="breadcrumb-item"><a href="{{ path('symfony_cms_profile', {id: app.user.id}) }}">{% trans from 'symfonycms' %}Profile{% endtrans %}</a></li>
                        <li class="breadcrumb-item active">{% trans from 'symfonycms' %}Reset password{% endtrans %}</li>
                    </ol>
                </div>

            </div>
        </div>
    </div>
    <div class="row">

        {% include '@SymfonyCms/profile/components/global.html.twig' %}

        <div class="col-xl-8">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title mb-4">{% trans from 'symfonycms' %}Edit your password{% endtrans %}</h4>

                    {{ form(form) }}

                </div>
                <!-- end card body -->
            </div>
            <!-- end card -->
        </div>
    </div>
{% endblock %}
