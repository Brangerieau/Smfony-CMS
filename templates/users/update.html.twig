{% extends '@SymfonyCms/layouts/base.html.twig' %}

{% block title %}{% trans from 'symfonycms' %}Administration{% endtrans %}{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-12">
            <div class="page-title-box d-sm-flex align-items-center justify-content-between">
                <h4 class="mb-sm-0 font-size-18">{{ user.lastname ~ ' ' ~ user.firstname }}</h4>

                <div class="page-title-right">
                    <ol class="breadcrumb m-0">
                        <li class="breadcrumb-item"><a href="{{ path('symfony_cms_users') }}">{% trans from 'symfonycms' %}Users{% endtrans %}</a></li>
                        <li class="breadcrumb-item active">{{ user.lastname ~ ' ' ~ user.firstname }}</li>
                    </ol>
                </div>

            </div>
        </div>
    </div>

    {{ component('flashMessage') }}

    <div class="row">
        <div class="col-xl-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title mb-4">{% trans from 'symfonycms' %}Edit user{% endtrans %}</h4>

                    {{ form_start(form) }}

                        <div class="row">
                            <div class="col-md-6">
                                {{ form_row(form.lastname) }}
                            </div>
                            <div class="col-md-6">
                                {{ form_row(form.firstname) }}
                            </div>
                        </div>

                        {{ form_row(form.email) }}

                        {{ form_row(form.avatar, { 'disabled': true }) }}

                        {{ form_row(form.save) }}

                    {{ form_end(form) }}
{#                    {{ form_end(form, {render_rest: false}) }}#}
                </div>
                <!-- end card body -->
            </div>
            <!-- end card -->
        </div>
        <!-- end col -->

    </div>

{% endblock %}