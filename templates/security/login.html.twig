{% extends '@SymfonyCms/layouts/baseSecurity.html.twig' %}

{% block title %}{% trans from 'symfonycms' %}Log in!{% endtrans %}{% endblock %}

{% block body %}
    <div class="col-md-8 col-lg-6 col-xl-5">
        <div class="card overflow-hidden">
            <div class="bg-primary bg-soft">
                <div class="row">
                    <div class="col-8">
                        <div class="text-primary p-4">
                            <h5 class="text-primary">{% trans from 'symfonycms' %}Welcome Back !{% endtrans %}</h5>
                            <p>{% trans from 'symfonycms' %}Sign in to continue to SymfonyCms.{% endtrans %}</p>
                        </div>
                    </div>
                    <div class="col-4 align-self-end">
                        <img src="assets/images/profile-img.png" alt="" class="img-fluid">
                    </div>
                </div>
            </div>
            <div class="card-body pt-0">
                <div class="auth-logo">
                    <a href="#" class="auth-logo-dark">
                        <div class="avatar-md profile-user-wid mb-4">
                            <span class="avatar-title rounded-circle bg-light">
                                <img src="assets/images/logo.svg" alt="" class="rounded-circle" height="34">
                            </span>
                        </div>
                    </a>
                </div>
                <div class="p-2">
                    <form class="form-horizontal" method="post">

                        {% if error %}
                            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}

                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                        <div class="mb-3">
                            <label for="username" class="form-label">{% trans from 'symfonycms' %}Email{% endtrans %}</label>
                            <input type="email" value="{{ last_username }}" name="email" class="form-control" id="username" autocomplete="email" required autofocus placeholder="{% trans from 'symfonycms' %}Enter email{% endtrans %}">
                        </div>

                        <div class="mb-3">
                            <label class="form-label">{% trans from 'symfonycms' %}Password{% endtrans %}</label>
                            <div class="input-group auth-pass-inputgroup">
                                <input type="password" name="password" class="form-control" placeholder="{% trans from 'symfonycms' %}Enter password{% endtrans %}" aria-label="Password" aria-describedby="password-addon">
                                <button class="btn btn-light " type="button" id="password-addon"><i class="mdi mdi-eye-outline"></i></button>
                            </div>
                        </div>

                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="remember-check" name="_remember_me">
                            <label class="form-check-label" for="remember-check">
                                {% trans from 'symfonycms' %}Remember me{% endtrans %}
                            </label>
                        </div>

                        <div class="mt-3 d-grid">
                            <button class="btn btn-primary waves-effect waves-light" type="submit">{% trans from 'symfonycms' %}Log In{% endtrans %}</button>
                        </div>

                        {% if reset_password %}
                            <div class="mt-4 text-center">
                                <a href="{{ path('app_forgot_password_request') }}" class="text-muted"><i class="mdi mdi-lock me-1"></i> {% trans from 'symfonycms' %}Forgot your password?{% endtrans %}</a>
                            </div>
                        {% endif %}

                    </form>
                </div>

            </div>
        </div>
        <div class="mt-5 text-center">

            <div>
                <p>Â© 2022 SymfonyCms.</p>
            </div>
        </div>

    </div>
{% endblock %}
